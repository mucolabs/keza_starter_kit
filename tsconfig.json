{
  "compilerOptions": {
    "allowJs": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "strict": true,
    "isolatedModules": true,
    "target": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noEmit": true,
    "paths": {
      "~/*": ["./resources/*"],
      "ziggy-js": ["./vendor/tightenco/ziggy"]
    }
  },
  "include": [
    "resources/*.tsx",
    "resources/*.ts",
    "resources/**/*.ts",
    "resources/**/*.tsx",
    "resources/**/*.d.ts",
    "resources/views/**/*.ts",
    "resources/views/**/*.tsx"
  ]
}
